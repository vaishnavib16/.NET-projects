@model List<Student>

<div>
    <div>
        <div class="col-6">
            <h2>Student List</h2>
        </div>
        <div class="col-3 ">
            <a  asp-controller="Student" asp-action="Add" class="btn btn-primary">
                Add
            </a>
        </div>
        <div class="col-3">
            <input type="text" name="name" value="" placeholder="Search" />
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                 ID
                </th>
                <th>
                Name
                </th>
                <th>
                Email
                </th>
                <th>
                Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr  >
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Status
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Student" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                        
                        
                            <a asp-controller="Student" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>


</div>
@model IEnumerable<StudentApplication.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.name)</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th>@Html.DisplayNameFor(model => model.phone)</th>
            <th>@Html.DisplayNameFor(model => model.address)</th>
            <th>@Html.DisplayNameFor(model => model.admission_date)</th>
            <th>@Html.DisplayNameFor(model => model.fees)</th>
            <th>@Html.DisplayNameFor(model => model.status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => student.id)</td>
                <td>@Html.DisplayFor(modelItem => student.name)</td>
                <td>@Html.DisplayFor(modelItem => student.email)</td>
                <td>@Html.DisplayFor(modelItem => student.phone)</td>
                <td>@Html.DisplayFor(modelItem => student.address)</td>
                <td>@Html.DisplayFor(modelItem => student.admission_date)</td>
                <td>@Html.DisplayFor(modelItem => student.fees)</td>
                <td>@Html.DisplayFor(modelItem => student.status)</td>
            </tr>
        }
    </tbody>
</table>


@model IEnumerable<StudentApplication.Models.Student>

<!DOCTYPE html>
<html>
<head>
    <title>Sorted Students</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Sorted Students</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Admission Date</th>
                <th>Fees</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.id</td>
                    <td>@student.name</td>
                    <td>@student.email</td>
                    <td>@student.phone</td>
                    <td>@student.address</td>
                    <td>@student.admission_date.ToString("yyyy-MM-dd")</td>
                    <td>@student.fees</td>
                    <td>@student.status</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
